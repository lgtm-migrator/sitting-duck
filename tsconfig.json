{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "_types/",
    "declarationMap": true,
    "listEmittedFiles": true,
    "moduleResolution": "node",
    "outDir": "build/",
    "strict": true,
    "target": "es2020"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
